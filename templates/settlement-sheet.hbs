<form class="{{cssClass}} flexcol" autocomplete="off">
  {{!-- Header --}}
  <header class="header">
    <div class="core-info">
      <img class="image" src="{{actor.img}}" data-edit="img" title="{{localize 'settlement-sheets.EditImage'}}" alt="{{localize 'settlement-sheets.EditImage'}}" />
      <h1 class="name">
        <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'Name'}}" />
      </h1>
    </div>
    <div class="trackers">
      <div class="tracker">
        <label class="title">{{localize 'settlement-sheets.Morale'}}</label>
        <label class="content">{{actor.system.morale}}</label>
      </div>
      <div class="tracker">
        <label class="title">{{localize 'settlement-sheets.Income'}}</label>
        <label class="content">{{actor.system.income}}</label>
      </div>
      <div class="tracker">
        <label class="title">{{localize 'settlement-sheets.Population'}}</label>
        <label class="content">{{actor.system.population}}</label>
      </div>
    </div>
  </header>

  {{!-- Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <div class="item" data-tab="overview">{{localize "settlement-sheets.Overview"}}</div>
    <div class="item" data-tab="statistics">{{localize "settlement-sheets.Statistics"}}</div>
    <div class="item" data-tab="buildings">{{localize "settlement-sheets.Buildings"}}</div>
    <div class="item" data-tab="notes">{{localize "settlement-sheets.Notes"}}</div>
  </nav>

  {{!-- Body --}}
  <section class="sheet-body">
    {{!-- Overview Tab --}}
    {{> "modules/settlement-sheets/templates/parts/settlement/overview.hbs"}}

    {{!-- Statistics Tab --}}
    {{> "modules/settlement-sheets/templates/parts/settlement/statistics.hbs"}}

    {{!-- Buildings Tab --}}
    {{> "modules/settlement-sheets/templates/parts/settlement/buildings.hbs"}}

    {{!-- Notes Tab --}}
    {{> "modules/settlement-sheets/templates/parts/settlement/notes.hbs"}}
  </section>
</form>
